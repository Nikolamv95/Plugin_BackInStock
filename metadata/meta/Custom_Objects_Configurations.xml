<?xml version="1.0" encoding="UTF-8"?>
<metadata xmlns="http://www.demandware.com/xml/impex/metadata/2006-10-31">
    <custom-type type-id="NotifyMeBackInStock">
        <display-name xml:lang="x-default">Notify me when product is back in stock</display-name>
        <description xml:lang="x-default">Custom object which receive productId - the id of the product for which customer subscribed for &amp; phoneNumbers - list of phone numbers which has to be notified when productId is back in stock</description>
        <staging-mode>no-staging</staging-mode>
        <storage-scope>organization</storage-scope>
        <retention-days>30</retention-days>
        <key-definition attribute-id="productId">
            <type>string</type>
            <min-length>0</min-length>
        </key-definition>
        <attribute-definitions>
            <attribute-definition attribute-id="phoneNumbers">
                <display-name xml:lang="x-default">phoneNumbers</display-name>
                <type>string</type>
                <localizable-flag>false</localizable-flag>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
        </attribute-definitions>
        <group-definitions>
            <attribute-group group-id="backInStock">
                <display-name xml:lang="x-default">backInStock</display-name>
                <attribute attribute-id="productId"/>
                <attribute attribute-id="phoneNumbers"/>
            </attribute-group>
        </group-definitions>
    </custom-type>
</metadata>
